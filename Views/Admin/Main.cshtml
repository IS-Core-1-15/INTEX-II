@{
    ViewData["Title"] = "Admin View";
}
@model CrashesViewModel

<div class="text-center">
    <h1><u>Crashes</u></h1>
    <br />
    <div class="text-end">
        <a asp-action="Add" asp-route-returnPage="@Model.PageInfo.CurrentPage" class="btn btn-info custom-btn-success"><b>Create New Record</b></a>
        <br /><br />
    </div>

    <!--table of crashes-->
    <table class="table table-sm table-striped table-bordered table-hover text-center">

        <thead>
            <tr>
                <th>Crash ID</th>
                <th>Date</th>
                <th>County</th>
                <th>City</th>
                <th>Crash Severity</th>
            </tr>
        </thead>

        <!--lists out each book and data about book along with buttons for details, edit, and delete-->
        <tbody>
            @foreach (Crash c in Model.Crashes)
            {
            <tr>
                <td>@c.CRASH_ID</td>
                <td>@c.CRASH_DATETIME</td>
                <td>@c.COUNTY_NAME</td>
                <td>@c.CITY</td>
                <td>@c.CRASH_SEVERITY_ID</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.CRASH_ID" asp-route-returnPage="@Model.PageInfo.CurrentPage" class="btn btn-sm btn-info custom-btn-info">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.CRASH_ID" asp-route-returnPage="@Model.PageInfo.CurrentPage" class="btn btn-sm btn-warning custom-btn-warning">Edit</a>
                </td>
                <td>
                    <a asp-action="DeleteConfirmation" asp-route-id="@c.CRASH_ID" asp-route-returnPage="@Model.PageInfo.CurrentPage" class="btn btn-sm btn-warning custom-btn-danger" >Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <!--links ot other pages of crashes-->
    <div page-links="@Model.PageInfo" page-action="Main" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
         class="btn-group pull-right m-1">
    </div>

</div>